generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Word {
  id       Int     @id @default(autoincrement())
  spanish  String  @unique
  english  String
  greek    String
  learned  Boolean @default(false) // Ensure this field is here
}